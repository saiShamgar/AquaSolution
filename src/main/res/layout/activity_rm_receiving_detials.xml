<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_weight_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/act_background"
    tools:context="com.PG.testingapp.UI.HeadLessGrading.HeadLessGradingDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar_layout_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/extra_large_50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/gradient_background_color">

            <ImageView
                android:id="@+id/back_button_rm_recive_details"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:src="@drawable/ic_left"
                android:padding="@dimen/margin_xlarge"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="RM Receiving "
                android:layout_gravity="center"
                android:id="@+id/toolbar_heading"
                android:textSize="@dimen/large_20dp"
                android:textColor="@color/white" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/scroolview_layout"
            android:layout_below="@+id/toolbar_layout_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_margin"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/margin_large"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="1dp"
                        android:padding="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_xxlarge">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:padding="@dimen/card_radius_8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Inward Date : "
                                    android:textSize="@dimen/t13_size"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_inwardDate"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_light_black"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Inward Gate\n pass no : "
                                    android:textSize="@dimen/t13_size"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_inward_pass_no"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_light_black"
                                    android:layout_gravity="center"
                                    android:textSize="14dp"/>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:padding="@dimen/card_radius_8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Process Schedule Date : "
                                    android:textSize="@dimen/t13_size"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_process_sch_date"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_light_black"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Process No : "
                                    android:textSize="@dimen/t13_size"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_process_no"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_light_black"
                                    android:layout_gravity="center"
                                    android:textSize="14dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:padding="@dimen/card_radius_8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Farmer Name : "
                                    android:textSize="@dimen/t13_size"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_farmer_name"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_light_black"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Agent Name : "
                                    android:textSize="@dimen/t13_size"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:textColor="@color/color_text"/>
                                <TextView
                                    android:id="@+id/txt_rm_agent_name"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_light_black"
                                    android:layout_gravity="center"
                                    android:textSize="14dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="@dimen/card_radius_8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Lot No : "
                            android:textSize="@dimen/t13_size"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/color_text"/>
                        <TextView
                            android:id="@+id/txt_rm_Lot_no"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_gravity="center"
                            android:textColor="@color/color_light_black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Lot Date : "
                            android:textSize="@dimen/t13_size"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"/>
                        <TextView
                            android:id="@+id/txt_rm_lot_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_light_black"
                            android:layout_gravity="center"
                            android:textSize="14dp"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Received Location"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t13_size"
                            android:textStyle="bold"
                            android:textColor="@color/color_text" />

                        <LinearLayout
                            android:id="@+id/spinner_layout_rm_recived_loc"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke_back_ground_gray"
                            android:paddingRight="@dimen/margin_large">
                            <Spinner
                                android:id="@+id/spinner_rm_recived_loc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black">
                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Product"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t13_size"
                            android:textStyle="bold"
                            android:textColor="@color/color_text"
                            />

                        <LinearLayout
                            android:id="@+id/spinner_layout_rm_product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke_back_ground_gray"
                            android:paddingRight="@dimen/margin_large">
                            <Spinner
                                android:id="@+id/spinner_rm_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black">
                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Variety"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t13_size"
                            android:textColor="@color/color_text"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/spinner_layout_rm_variety"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke_back_ground_gray"
                            android:paddingRight="@dimen/margin_large">
                            <Spinner
                                android:id="@+id/spinner_rm_variety"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black">
                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Count"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t13_size"
                            android:textStyle="bold"
                            android:textColor="@color/color_text" />

                        <LinearLayout
                            android:id="@+id/spinner_layout_rm_count"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke_back_ground_gray"
                            android:paddingRight="@dimen/margin_large">
                            <Spinner
                                android:id="@+id/spinner_rm_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/black">
                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_xxxxxlarge"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Quantity"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/t13_size"
                            android:textStyle="bold"
                            android:textColor="@color/color_text" />

                        <EditText
                            android:id="@+id/txt_rm_received_details_quantity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/t13_size"
                            android:hint="0"
                            android:gravity="end"
                            android:padding="5dp"
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:background="@drawable/boarder_shape"
                            android:textColor="@color/order_txt_color" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/app_dark_color"
                        android:orientation="horizontal"
                        android:elevation="@dimen/card_elevation_4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="S.No."
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/t0_size"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Product"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/t0_size"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Variety"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/t0_size"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Count"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/t0_size"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Quantity"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/t0_size"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/extra_large_50dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rm_receiving_details_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_xlarge">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cumulative Wt."
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/color_app_blue"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/white"
                android:layout_marginRight="3dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_rm_receiving_details_weight_btn_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SAVE &amp; CONTINUE"
                android:gravity="center"
                android:background="@color/app_color"
                android:textSize="@dimen/t3_size"
                android:textColor="@color/white"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingRight="@dimen/margin_xlarge"
                android:drawableRight="@drawable/ic_arrow_forward_white_24dp"/>

            <TextView
                android:id="@+id/txt_rm_receiving_details_btn_complete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_dark_color"
                android:gravity="center"
                android:text="GO TO SUMMARY"
                android:textColor="@color/white"
                android:textSize="@dimen/t3_size"
                android:textStyle="bold" />
        </LinearLayout>




    </RelativeLayout>
</LinearLayout>
