<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_inserted_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.PG.testingapp.UI.ValueEditionDetailsInserted">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_color"
            android:elevation="@dimen/card_elevation_4dp">

            <LinearLayout
                android:id="@+id/toolbar_layout_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/extra_large_50dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/back_button_rm_recive_details_ins"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_left"
                    android:padding="@dimen/margin_xlarge"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="RM Receiving "
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_heading"
                    android:textSize="@dimen/large_20dp"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_below="@+id/toolbar_layout_lin"
                android:elevation="@dimen/card_elevation_4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="S.No."
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Product"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Variety"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Count"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Quantity"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/t0_size"
                    android:layout_weight="1"/>


            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_rm_receiving_ins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/act_background" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_rm_receiving_inserted_Upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/color_ripple"
                android:layout_marginBottom="@dimen/margin_xxxxlarge"
                android:clickable="true"
                android:src="@drawable/ic_upload"
                app:backgroundTint="@color/app_dark_color"
                android:layout_marginRight="@dimen/margin_xlarge"/>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
