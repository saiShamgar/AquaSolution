<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.RmAnalysis.RmAnalysis_summary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar_layout_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/extra_large_50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/gradient_background_color">

            <ImageView
                android:id="@+id/back_button_rm_analysis"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:src="@drawable/ic_left"
                android:padding="@dimen/margin_xlarge"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="RM Receiving Analysis"
                android:layout_gravity="center"
                android:id="@+id/toolbar_heading"
                android:textSize="@dimen/large_20dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Analysis Date : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_analysis_date_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lot no : "
                        android:textSize="@dimen/t13_size"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_lot_no_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_light_black"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Lot Date : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_lot_date_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_farmer_name_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_light_black"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Location : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_location_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Received Count : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_received_count_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_light_black"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Quantity : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_quantity_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sample Quantity HON(Kgs) : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_sample_quantity_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_light_black"
                        android:layout_gravity="center"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="No of pices : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_no_of_pics_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Supervisor name : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_supervisor_name_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_light_black"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:padding="@dimen/card_radius_8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Remarks : "
                        android:textSize="@dimen/t13_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/color_text"/>
                    <TextView
                        android:id="@+id/txt_rm_remarks_summary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_light_black"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/app_dark_color"
                    android:orientation="horizontal"
                    android:elevation="@dimen/card_elevation_4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Description"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="No of pieces"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Cutting Qty/sample Qty"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="% on Sample Qty"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Cutting in recd. Qty"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Final Cutting"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/t0_size"
                        android:layout_weight="1"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rm_analysis_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_rm_analysis_inserted_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:rippleColor="@color/color_ripple"
        android:clickable="true"
        android:src="@drawable/ic_upload"
        app:backgroundTint="@color/app_dark_color"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="@dimen/margin_xlarge"/>



</RelativeLayout>