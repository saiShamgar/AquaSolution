<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:elevation="@dimen/card_elevation_4dp">

        <TextView
            android:id="@+id/rm_txt_sl_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="S.No."
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/t0_size"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/rm_txt_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Product"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/t0_size"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/rm_txt_variety"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Variety"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/t0_size"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/rm_txt_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Count"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/t0_size"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/rm_txt_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Quantity"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/t0_size"
            android:layout_weight="1"/>


    </LinearLayout>

</RelativeLayout>