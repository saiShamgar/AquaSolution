<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/extra_large_50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/checkbox_rm_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_color"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_sl_no"
                android:layout_width="@dimen/extra_large_50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_inward_date"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size" />

            <TextView
                android:id="@+id/txt_IGP_no"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size" />

            <TextView
                android:id="@+id/txt_procurement_no"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="21"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size" />

            <TextView
                android:id="@+id/txt_farmer_name"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_text"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txt_variety"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/txt_count"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="visible"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>