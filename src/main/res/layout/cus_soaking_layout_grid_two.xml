<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_item_weight_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="9">
            <TextView
                android:id="@+id/txt_sl_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_grade"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_no_nets"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_total_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_total_tare_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_net_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_cumulative_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>